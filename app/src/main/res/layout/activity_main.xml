<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activites.MainActivity">

    <!-- BƯỚC 1: THÊM CONTAINER CHO FRAGMENT -->
    <!-- Đây là khu vực để hiển thị nội dung của HomeFragment, CalendarFragment, ... -->
    <androidx.fragment.app.FragmentContainerView

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation" />

    <!-- BƯỚC 2: ĐẶT BOTTOM NAVIGATION Ở DƯỚI CÙNG -->
    <!-- Tôi giả định bạn đã có View này, hãy đảm bảo nó có ID là bottomNavigation -->
    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
