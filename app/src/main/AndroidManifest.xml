        android:supportsRtl="true"
        android:theme="@style/Theme.QLChiTieu">
        <activity
            android:name=".Activites.SyncDataActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.AddBudgetActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.AddEditWalletActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.GiaoDichDinhKyActivity"
