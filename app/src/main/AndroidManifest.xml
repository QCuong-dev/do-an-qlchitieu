            android:name=".Activites.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.AddChitieuActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SigninActivity"
            android:exported="false" />
        <activity
            android:name=".AddCategorySheet"
            android:exported="false" />
        <activity
            android:name=".Activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.qlchitieu.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>